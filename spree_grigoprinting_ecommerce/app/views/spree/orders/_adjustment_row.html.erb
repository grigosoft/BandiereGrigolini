<% if adjustments.sum(&:amount) != 0 %>
  <div class="adjustment">
    <div class="col-md-3 col-md-offset-6" colspan="4" align='right'><h5><%= type %>: <%= label %></h5></div>
    <div class="col-md-2" colspan='2'>
      <h5><%= Spree::Money.new(adjustments.sum(&:amount), currency: @order.currency) %></h5>
    </div>
  </div>
<% end %>
