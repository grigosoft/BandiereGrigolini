<%= form_for Spree::User.new, as: :spree_user, url: spree.create_new_session_path do |f| %>
  <fieldset id="password-credentials">
    <div class="form-group">
      <%= f.email_field :email, class: 'form-control', tabindex: 1, placeholder: Spree.t(:email) %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, class: 'form-control', tabindex: 2, placeholder: Spree.t(:password) %>
    </div>
    <div class="checkbox">
      <label>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, Spree.t(:remember_me) %>
      </label>
    </div>
    <div class="form-group buttons">
      <%= f.submit Spree.t(:login), class: 'btn btn-lg btn-primary btn-block', tabindex: 3 %>
    </div>
    <div class="form-group buttons account_link">
      <%= link_to Spree.t(:create_a_new_account), spree.signup_path, class: "new_account btn btn-lg btn-secondary btn-block" %>
    </div>
    <div class="form-group"><%= link_to Spree.t(:reset_password), spree.recover_password_path, class: "reset_password" %></div>
  </fieldset>
<% end %>
