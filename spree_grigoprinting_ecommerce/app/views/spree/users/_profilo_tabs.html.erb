<% account_link = [{text:"Dati personali", url:"/account/user", icon:"user", current: :utente},
                   {text:"Indirizzi", url:"/account/addresses", icon:"road", current: :indirizzi},
                   {text:"Ordini", url:"/account/orders", icon:"file", current: :ordini}]%>


<ul class="nav nav-pills nav-stacked">
  <% account_link.each do |voce| %>
    <li<%== ' class="active"' if current == voce[:current] %>>
      <%= link_to_with_icon voce[:icon], voce[:text], voce[:url] %>
    </li>
  <% end %>
</ul>
